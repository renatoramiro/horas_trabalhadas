<h1>Todos os projetos</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Descrição</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.name %></td>
    <td><%= project.description %></td>
    <td><%= link_to 'Detalhes', project %></td>
    <td><%= link_to 'Editar', edit_project_path(project) %></td>
    <td><%= link_to 'Apagar', project, confirm: 'Você tem certeza?', method: :delete %></td>
    <td><%= link_to_unless project.users.include?(@current_user), "Associar-se", new_project_project_membership_path(project) %></td>
  </tr>
<% end %>
</table>

<br />

